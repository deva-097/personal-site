      {interests.swissKnives.items.map((item) => (
        <li class="item">
          <div>
            {item.links ? (
              <span class="item-name">{item.links.map((link, i) => (<>{i > 0 && ', '}<a href={link.url} target="_blank" rel="noopener noreferrer" class="item-name">{link.name}</a></>))}</span>
