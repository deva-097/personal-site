<style>
  .page-intro {
    color: var(--color-text-muted);
    margin-bottom: 2rem;
  }

  .interest-nav {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 2rem;
  }

  .pill {
    font-family: var(--font-heading);
    font-size: 0.85rem;
    color: var(--color-text-muted);
    padding: 0.35rem 0.85rem;
    border: 1px solid var(--color-border);
    border-radius: 100px;
    text-decoration: none;
    transition: all 0.15s ease;
  }

  .pill:hover {
    color: var(--color-text);
    background-color: var(--color-surface);
    border-color: var(--color-text-muted);
  }

  .pill.active {
    color: var(--color-bg);
    background-color: var(--color-text);
    border-color: var(--color-text);
  }

  .interest-section {
    margin-bottom: 2.5rem;
  }

  .interest-section.hidden {
    display: none;
  }

  .section-description {
    color: var(--color-text-muted);
    font-size: 0.95rem;
    margin-bottom: 1rem;
  }

  .item-list {
    list-style: none;
    padding: 0;
  }

  .item {
    padding: 0.4rem 0.75rem;
    margin: 0 -0.75rem;
    border-radius: 6px;
    transition: background-color 0.15s ease;
  }

  .item:hover {
    background-color: var(--color-surface);
  }

  .item-name {
    font-family: var(--font-heading);
    font-weight: 500;
  }

  a.item-name {
    text-decoration: underline;
    text-decoration-thickness: 1px;
    text-underline-offset: 2px;
  }

  a.item-name:hover {
    text-decoration-thickness: 2px;
  }

  .item-brand {
    font-size: 0.9rem;
    color: var(--color-text-muted);
  }

  .item-notes {
    font-size: 0.85rem;
    color: var(--color-text-muted);
    margin-top: 0.15rem;
  }
</style>

<script>
  function filterSections() {
    const hash = window.location.hash.slice(1);
    const sections = document.querySelectorAll('.interest-section');
    const navLinks = document.querySelectorAll('.interest-nav a');

    // Update navigation active state
    navLinks.forEach(link => {
      const linkHash = link.getAttribute('href')?.slice(1);
      if (linkHash === hash) {
        link.classList.add('active');
      } else {
        link.classList.remove('active');
      }
    });

    // Show/hide sections
    if (hash) {
      sections.forEach(section => {
        if (section.id === hash) {
          section.classList.remove('hidden');
        } else {
          section.classList.add('hidden');
        }
      });
    } else {
      // Show all sections if no hash
      sections.forEach(section => section.classList.remove('hidden'));
      navLinks.forEach(link => link.classList.remove('active'));
    }
  }

  // Run on page load
  filterSections();

  // Run when hash changes
  window.addEventListener('hashchange', filterSections);
</script>
