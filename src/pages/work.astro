---
import BaseLayout from '../layouts/BaseLayout.astro';

const projects = [
  {
    name: "Reddit Saved Posts Manager",
    description: "A Flask web app to view, browse, and manage your saved Reddit posts. Features subreddit filtering, inline post viewer, keyboard navigation, and dark mode.",
    link: "https://github.com/deva-097/reddit-manager",
    year: 2026
  },
];
---

<BaseLayout title="Work | Devashish" description="Professional work and projects">
  <h1>Work</h1>
  <p class="page-intro">
    Projects I've worked on and things I've built.
  </p>
  
  <section class="links-section">
    <h2>Links</h2>
    <ul class="external-links">
      <li>
        <a href="https://github.com/deva-097" target="_blank" rel="noopener">
          GitHub
        </a>
      </li>
      <li>
        <a href="https://www.linkedin.com/in/devashish-bansal" target="_blank" rel="noopener">
          LinkedIn
        </a>
      </li>
    </ul>
  </section>
  
  <section class="projects-section">
    <h2>Projects</h2>
    {projects.length > 0 ? (
      <ul class="project-list">
        {projects.map((project) => (
          <li class="project-item">
            <div class="project-header">
              <a href={project.link} target="_blank" rel="noopener" class="project-name">
                {project.name} â†—
              </a>
              <span class="project-year">{project.year}</span>
            </div>
            <p class="project-description">{project.description}</p>
          </li>
        ))}
      </ul>
    ) : (
      <div class="empty-state">
        <p>Projects will be added here soon.</p>
      </div>
    )}
  </section>
</BaseLayout>

<style>
  .page-intro {
    color: var(--color-text-muted);
    margin-bottom: 2.5rem;
  }
  
  .links-section {
    margin-bottom: 2rem;
  }
  
  .external-links {
    list-style: none;
    padding: 0;
    display: flex;
    gap: 1.5rem;
  }
  
  .external-links a {
    font-family: var(--font-heading);
    text-decoration: underline;
    text-underline-offset: 3px;
  }
  
  .project-list {
    list-style: none;
    padding: 0;
  }
  
  .project-item {
    padding: 1rem 0;
    border-bottom: 1px solid var(--color-border);
  }
  
  .project-item:first-child {
    border-top: 1px solid var(--color-border);
  }
  
  .project-header {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    gap: 1rem;
    margin-bottom: 0.5rem;
  }
  
  .project-name {
    font-family: var(--font-heading);
    font-weight: 500;
  }
  
  .project-year {
    font-size: 0.85rem;
    color: var(--color-text-muted);
    white-space: nowrap;
  }
  
  .project-description {
    font-size: 0.95rem;
    color: var(--color-text-muted);
    margin: 0;
  }
  
  .empty-state {
    margin-top: 1rem;
    padding: 2rem;
    background: var(--color-border);
    border-radius: 6px;
  }
  
  .empty-state p {
    color: var(--color-text-muted);
    font-size: 0.95rem;
    text-align: center;
    margin: 0;
  }
</style>
