---
import BaseLayout from '../layouts/BaseLayout.astro';

// Get all posts from the content/writing folder
const posts = await Astro.glob('../content/writing/*.md');
const sortedPosts = posts
  .sort((a, b) => new Date(b.frontmatter.date).getTime() - new Date(a.frontmatter.date).getTime())
  .slice(0, 5); // Show up to 5 most recent posts
---

<BaseLayout title="Devashish">
  <section class="intro">
    <p class="greeting">Hello, I'm <strong>Devashish</strong>.</p>
    <p>
      This is my corner of the internet where I collect
      my thoughts, interests, and things I'm learning along the way.
    </p>
    <p>
      I write about things that interest me, keep track of what I'm reading,
      and maintain lists of the objects and ideas that shape my life.
    </p>
    <p>
      I like to dabble, so some of this may feel very disconnected. But I hope it will tie together in ways I cannot yet see.
    </p>
    <p>
      This is my way of discovering myself. I hope you find something meaningful that resonates with you too.
    </p>
  </section>

  <section class="recent">
    <h2>Recent Writing</h2>
    {sortedPosts.length > 0 ? (
      <ul class="post-list">
        {sortedPosts.map((post) => (
          <li>
            <a href={`/writing/${post.frontmatter.slug}`}>
              <span class="post-title">{post.frontmatter.title}</span>
              <span class="post-date">
                {new Date(post.frontmatter.date).toLocaleDateString('en-US', {
                  month: 'long',
                  year: 'numeric'
                })}
              </span>
            </a>
          </li>
        ))}
      </ul>
    ) : (
      <p class="no-posts">No posts yet. Check back soon!</p>
    )}
    <p class="see-all"><a href="/writing">See all &rarr;</a></p>
  </section>
</BaseLayout>

<style>
  .intro {
    margin-bottom: 2rem;
  }

  .greeting {
    font-size: 1.25rem;
  }

  .greeting strong {
    font-weight: 600;
  }

  .post-list {
    list-style: none;
    padding: 0;
  }

  .post-list li {
    margin-bottom: 0;
  }

  .post-list a {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    gap: 1rem;
    padding: 0.5rem 0.75rem;
    margin: 0 -0.75rem;
    border-radius: 6px;
    transition: background-color 0.15s ease;
  }

  .post-list a:hover {
    background-color: var(--color-surface);
    color: var(--color-text);
  }

  .post-list a:hover .post-title {
    text-decoration: underline;
    text-underline-offset: 3px;
  }

  .post-title {
    font-family: var(--font-heading);
  }

  .post-date {
    font-size: 0.85rem;
    color: var(--color-text-muted);
    white-space: nowrap;
  }

  .see-all {
    margin-top: 1rem;
  }

  .see-all a {
    font-family: var(--font-heading);
    font-size: 0.9rem;
    color: var(--color-text-muted);
  }
</style>
