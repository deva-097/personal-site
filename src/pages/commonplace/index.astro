---
import BaseLayout from '../../layouts/BaseLayout.astro';

// Get all pieces from the content/commonplace folder
const pieces = await Astro.glob('../../content/commonplace/*.md');
const sortedPieces = pieces.sort((a, b) =>
  new Date(b.frontmatter.date).getTime() - new Date(a.frontmatter.date).getTime()
);
---

<BaseLayout title="Commonplace | Devashish" description="Collected poems, quotes, and fragments">
  <h1>Commonplace</h1>
  <p class="page-intro">Poems, quotes, and fragments I've collectedâ€”words that resonated. The word "commonplace" comes from a [commonplace notebook](https://en.wikipedia.org/wiki/Commonplace_book)</p>

  {sortedPieces.length > 0 ? (
    <ul class="piece-list">
      {sortedPieces.map((piece) => (
        <li>
          <a href={`/commonplace/${piece.frontmatter.slug}`}>
            <span class="piece-title">{piece.frontmatter.title}</span>
            <span class="piece-author">{piece.frontmatter.author}</span>
          </a>
        </li>
      ))}
    </ul>
  ) : (
    <div class="placeholder">
      <p>Collection coming soon.</p>
    </div>
  )}
</BaseLayout>

<style>
  .page-intro {
    color: var(--color-text-muted);
    margin-bottom: 2.5rem;
  }

  .piece-list {
    list-style: none;
    padding: 0;
  }

  .piece-list li {
    margin-bottom: 0;
  }

  .piece-list a {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    gap: 1rem;
    padding: 0.75rem 0;
    border-bottom: 1px solid var(--color-border);
  }

  .piece-list li:first-child a {
    border-top: 1px solid var(--color-border);
  }

  .piece-list a:hover .piece-title {
    text-decoration: underline;
    text-underline-offset: 3px;
  }

  .piece-title {
    font-family: var(--font-heading);
  }

  .piece-author {
    font-size: 0.85rem;
    color: var(--color-text-muted);
    white-space: nowrap;
    font-style: italic;
  }

  .placeholder {
    margin-top: 2rem;
    padding: 2rem;
    background: var(--color-border);
    border-radius: 6px;
  }

  .placeholder p {
    color: var(--color-text-muted);
    text-align: center;
    margin: 0;
  }
</style>
