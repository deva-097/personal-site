<style is:global>
  :root {
    --color-bg: #faf8f5;
    --color-text: #292524;
    --color-text-muted: #78716c;
    --color-border: #e7e5e4;
    --color-link: #292524;
    --color-link-hover: #78716c;
    --color-accent: #b45309;
    --color-surface: #f5f0eb;

    --font-body: 'Source Serif 4', Georgia, serif;
    --font-heading: 'DM Sans', system-ui, sans-serif;

    --max-width: 640px;
    --spacing-unit: 1rem;
  }

  [data-theme="dark"] {
    --color-bg: #1c1917;
    --color-text: #e7e5e4;
    --color-text-muted: #a8a29e;
    --color-border: #44403c;
    --color-link: #e7e5e4;
    --color-link-hover: #d6d3d1;
    --color-surface: #292524;
  }

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  html {
    font-size: 17px;
    scroll-behavior: smooth;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }

  body {
    font-family: var(--font-body);
    background-color: var(--color-bg);
    color: var(--color-text);
    line-height: 1.75;
  }

  ::selection {
    background: rgba(180, 83, 9, 0.15);
  }

  :focus-visible {
    outline: 2px solid var(--color-accent);
    outline-offset: 2px;
  }

  .layout-wrapper {
    display: flex;
    min-height: 100vh;
  }

  .main-wrapper {
    flex: 1;
    max-width: 640px;
    padding: 3rem 2rem;
    display: flex;
    flex-direction: column;
    width: 100%;
  }

  main {
    flex: 1;
  }

  a {
    color: var(--color-link);
    text-decoration: none;
    transition: color 0.15s ease;
  }

  a:hover {
    color: var(--color-link-hover);
  }

  /* Prose content link underlines */
  .post-content a,
  .piece-content a,
  .intro a,
  .page-intro a,
  .section-description a {
    text-decoration: underline;
    text-decoration-color: var(--color-border);
    text-underline-offset: 3px;
    text-decoration-thickness: 1px;
  }

  .post-content a:hover,
  .piece-content a:hover,
  .intro a:hover,
  .page-intro a:hover,
  .section-description a:hover {
    text-decoration-color: var(--color-text-muted);
  }

  h1, h2, h3, h4 {
    font-family: var(--font-heading);
    font-weight: 500;
    line-height: 1.3;
  }

  h1 {
    font-size: 1.75rem;
    margin-bottom: 1.5rem;
  }

  h2 {
    font-size: 1.125rem;
    margin-top: 2.5rem;
    margin-bottom: 1rem;
    color: var(--color-text);
    font-weight: 600;
    padding-bottom: 0.5rem;
    border-bottom: 1px solid var(--color-border);
  }

  p {
    margin-bottom: 1.25rem;
  }

  p:last-child {
    margin-bottom: 0;
  }

  ul, ol {
    margin-bottom: 1.25rem;
    padding-left: 1.25rem;
  }

  li {
    margin-bottom: 0.5rem;
  }

  img {
    max-width: 100%;
    height: auto;
  }

  hr {
    border: none;
    border-top: 1px solid var(--color-border);
    margin: 2rem 0;
  }

  blockquote {
    border-left: 2px solid var(--color-accent);
    padding-left: 1rem;
    margin: 1.5rem 0;
    color: var(--color-text-muted);
    font-style: italic;
  }

  code {
    font-family: 'SF Mono', Consolas, monospace;
    font-size: 0.9em;
    background: var(--color-border);
    padding: 0.15em 0.35em;
    border-radius: 3px;
  }

  pre {
    background: var(--color-text);
    color: var(--color-bg);
    padding: 1rem;
    border-radius: 6px;
    overflow-x: auto;
    margin: 1.5rem 0;
  }

  pre code {
    background: none;
    padding: 0;
  }

  /* Footnotes */
  .footnotes {
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 1px solid var(--color-border);
    font-size: 0.9rem;
  }

  .footnotes ol {
    padding-left: 1.5rem;
  }

  .footnotes li {
    margin-bottom: 0.5rem;
  }

  .footnotes p {
    display: inline;
    margin: 0;
  }

  .footnotes a {
    text-decoration: none;
  }

  .footnotes a:hover {
    text-decoration: underline;
  }

  /* Footnote reference in text */
  sup a {
    text-decoration: none;
    font-weight: 600;
  }

  sup a:hover {
    text-decoration: underline;
  }
</style>

