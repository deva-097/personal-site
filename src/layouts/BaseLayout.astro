    <!-- Theme Toggle Script -->
    <script>
      function initThemeToggle() {
        const toggle = document.getElementById('theme-toggle');

        toggle?.addEventListener('click', () => {
          const current = document.documentElement.getAttribute('data-theme');
          const next = current === 'light' ? 'dark' : 'light';

          document.documentElement.setAttribute('data-theme', next);
          localStorage.setItem('theme', next);
        });

        // Listen for system preference changes
        window.matchMedia('(prefers-color-scheme: dark)').addEventListener('change', (e) => {
          if (!localStorage.getItem('theme')) {
            document.documentElement.setAttribute('data-theme', e.matches ? 'dark' : 'light');
          }
        });
      }

      initThemeToggle();
    </script>
  </body>
</html>

<style is:global>
  :root {
    --color-bg: #fafaf9;
    --color-text: #1c1917;
    --color-text-muted: #78716c;
    --color-border: #e7e5e4;
    --color-link: #1c1917;
    --color-link-hover: #78716c;
    --color-accent: #dc2626;

    --font-body: 'Source Serif 4', Georgia, serif;
    --font-heading: 'DM Sans', system-ui, sans-serif;

    --max-width: 640px;
    --spacing-unit: 1rem;
  }

  [data-theme="dark"] {
    --color-bg: #1c1917;
    --color-text: #fafaf9;
    --color-text-muted: #a8a29e;
    --color-border: #44403c;
    --color-link: #fafaf9;
    --color-link-hover: #d6d3d1;
  }
  
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }
  
  html {
    font-size: 17px;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }
  
  body {
    font-family: var(--font-body);
    background-color: var(--color-bg);
    color: var(--color-text);
    line-height: 1.7;
  }
  
  .container {
    max-width: var(--max-width);
    margin: 0 auto;
    padding: 3rem 1.5rem;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
  }
  
  main {
    flex: 1;
  }
  
  a {
    color: var(--color-link);
    text-decoration: none;
    transition: color 0.15s ease;
  }
  
  a:hover {
    color: var(--color-link-hover);
  }
  
  h1, h2, h3, h4 {
    font-family: var(--font-heading);
    font-weight: 500;
    line-height: 1.3;
  }
  
  h1 {
    font-size: 1.75rem;
    margin-bottom: 1.5rem;
  }
  
  h2 {
    font-size: 1.125rem;
    margin-top: 2.5rem;
    margin-bottom: 1rem;
    color: var(--color-text-muted);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    font-weight: 600;
  }
  
  p {
    margin-bottom: 1.25rem;
  }
  
  p:last-child {
    margin-bottom: 0;
  }
  
  ul, ol {
    margin-bottom: 1.25rem;
    padding-left: 1.25rem;
  }
  
  li {
    margin-bottom: 0.5rem;
  }
  
  img {
    max-width: 100%;
    height: auto;
  }
  
  hr {
    border: none;
    border-top: 1px solid var(--color-border);
    margin: 2rem 0;
  }
  
  blockquote {
    border-left: 2px solid var(--color-border);
    padding-left: 1rem;
    margin: 1.5rem 0;
    color: var(--color-text-muted);
    font-style: italic;
  }
  
  code {
    font-family: 'SF Mono', Consolas, monospace;
    font-size: 0.9em;
    background: var(--color-border);
    padding: 0.15em 0.35em;
    border-radius: 3px;
  }
  
  pre {
    background: var(--color-text);
    color: var(--color-bg);
    padding: 1rem;
    border-radius: 6px;
    overflow-x: auto;
    margin: 1.5rem 0;
  }
  
  pre code {
    background: none;
    padding: 0;
  }

  /* Footnotes */
  .footnotes {
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 1px solid var(--color-border);
    font-size: 0.9rem;
  }

  .footnotes ol {
    padding-left: 1.5rem;
  }

  .footnotes li {
    margin-bottom: 0.5rem;
  }

  .footnotes p {
    display: inline;
    margin: 0;
  }

  .footnotes a {
    text-decoration: none;
  }

  .footnotes a:hover {
    text-decoration: underline;
  }

  /* Footnote reference in text */
  sup a {
    text-decoration: none;
    font-weight: 600;
  }

  sup a:hover {
    text-decoration: underline;
  }
</style>

<style>
  .site-header {
    margin-bottom: 4rem;
  }
  
  nav {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    flex-wrap: wrap;
    gap: 1rem;
  }
  
  .site-name {
    font-family: var(--font-heading);
    font-weight: 600;
    font-size: 1.125rem;
  }
  
  .nav-links {
    display: flex;
    gap: 1.5rem;
  }
  
  .nav-links a {
    font-family: var(--font-heading);
    font-size: 0.9rem;
    color: var(--color-text-muted);
  }
  
  .nav-links a:hover {
    color: var(--color-text);
  }

  #theme-toggle {
    background: none;
    border: none;
    color: var(--color-text-muted);
    cursor: pointer;
    padding: 0.25rem;
    display: flex;
    align-items: center;
    transition: color 0.15s ease;
  }

  #theme-toggle:hover {
    color: var(--color-text);
  }

  [data-theme="light"] .moon-icon {
    display: none;
  }

  [data-theme="dark"] .sun-icon {
    display: none;
  }

  footer {
    margin-top: 4rem;
    padding-top: 2rem;
    border-top: 1px solid var(--color-border);
  }

  .footer-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  footer p {
    font-family: var(--font-heading);
    font-size: 0.85rem;
    color: var(--color-text-muted);
    margin: 0;
  }

  .social-links {
    display: flex;
    gap: 1rem;
    align-items: center;
  }

  .social-links a {
    color: var(--color-text-muted);
    display: flex;
    align-items: center;
    transition: color 0.15s ease;
  }

  .social-links a:hover {
    color: var(--color-text);
  }

  .social-links svg {
    width: 20px;
    height: 20px;
  }
  
  @media (max-width: 480px) {
    .nav-links {
      gap: 1rem;
    }
  }
</style>
